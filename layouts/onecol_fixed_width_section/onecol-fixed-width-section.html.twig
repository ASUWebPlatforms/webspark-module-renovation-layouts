{% if content %}
  <div{{ attributes.addClass('layout__fixed-width') }}>
    {% if content.first %}
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
              {{ content.first }}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}